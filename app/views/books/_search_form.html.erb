<%= search_form_for @q, class: 'form w-25' do |f| %>
  <div class="form-group">
    <%= f.label :author_or_title_cont %>
    <%= f.search_field :author_or_title_cont, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :author_or_title_start %>
    <%= f.search_field :author_or_title_start, class: 'form-control' %>
  </div>

  <%= f.submit 'Search', class: 'btn btn-primary' %>
<% end %>