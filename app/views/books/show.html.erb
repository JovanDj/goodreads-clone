<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @book.genre %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @book.rating %>
</p>

<p>
  <strong>Review:</strong>
  <%= @book.review %>
</p>

<p>
  <strong>To read:</strong>
  <%= @book.to_read %>
</p>

<div class="btn-group">
  <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-primary' %>
  <%= link_to favorite_text, favorite_books_update_path(book: @book), id: "favorite_link", class: 'btn btn-primary', remote: true %>
  <%= link_to 'Add review', new_book_review_path(:book, @book.id), class: 'btn btn-primary' %>
  <%= link_to 'Back', profile_index_path, class: 'btn btn-primary' %>
</div>


<h2>Reviews: </h2>

<% @reviews.each do |review| %>

  <h3>By: <%= review.user.name %> </h3>

  <p> --> <%= review.body %> </p>
<% end %>
