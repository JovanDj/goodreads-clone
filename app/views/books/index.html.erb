<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <%= render 'books/search_form' %>

        <%= sort_link(@q, :author, default_order: :asc) do %>
          <strong>Author name</strong>
        <% end %>

        <%= sort_link(@q, :title, default_order: :asc) do %>
          <strong>Title</strong>
        <% end %>
      </div>
    </div>
  </div>
</div>

<hr>
<% @books.each do |book| %>
  <div class="row">
    <div class="col-md-7">
      <%= link_to image_tag(book.cover) %>
    </div>
    <div class="col-md-5">

      <div class="card my-auto">
        <div class="card-body">
          <h3><%= book.title %></h3>
          <h4><%= book.author %></h4>
          <p><%= truncate(book.description, length: 100) %></p>
          <%= link_to 'View Book', book, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>

  <hr>

<% end %>
</div>
