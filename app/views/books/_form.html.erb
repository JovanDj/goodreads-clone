<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :genre %>
    <%= f.input :description %>
    <%= f.input :rating %>
    <%= f.input :review %>
    <%= f.input :favorite %>
    <%= f.input :to_read %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
