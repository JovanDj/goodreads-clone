<h1>Favorite books</h1>


<div class="row">
  <% @favorite_books.each do |book| %>

    <div class="col col-xs-6 col-md-3 col-lg-2">
      <div class="card mb-5">
        <%= link_to(image_tag(book.cover, class: 'img-fluid'), book) %>

        <div class="card-body">
          <h5 class="card-title">  <%= book.title %> </h5>
          <p> <%= book.author %> </p>

          <p class="card-text"> <%= truncate(book.description, length: 100) %> </p>

          <%= link_to 'More', book, class: 'btn btn-primary d-block center-block' %>
        </div>
      </div>

    </div>
  <% end %>
</div>

