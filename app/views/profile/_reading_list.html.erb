<% unless @books_to_read.blank? %>

  <div class="row">
    <div class="col col-md-6 offset-md-3">
      <% @books_to_read.each do |book| %>
        <li class="list-group-item">
          <span>
            <%= book.book.title %>
          </span>

          <%= link_to read_remove_book_path(book.book), method: :delete, remote: true do %>
          <%= icon 'fas', 'trash-alt', class: 'float-right' %>

        <% end %>

      </li>

    <% end %>
  </div>
</div>

<% else %>

<p class="text center text-info">There is nothing here!
  <%= icon 'fas', 'exclamation-triangle', size: '9px' %>
</p>

<% end %>